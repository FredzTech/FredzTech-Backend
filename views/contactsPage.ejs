<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Image Uploading</title>
	<link rel="stylesheet" href="/views/imagesPage.ejs">
</head>
<style>
	body{

background: radial-gradient( circle 610px at 5.2% 51.6%,  rgba(5,8,114,1) 0%, rgba(7,3,53,1) 97.5% );	}
	h1{
		text-decoration: underline;
		color: black;
	}
	form{
		display:flex;
		flex-direction: column;
		justify-content:center;
	}

	.form-button{
		align-self: center;
		margin-top:20px;
	}

	.form-button button{
		height:40px;
		width:120px;
		font-size:18px;
		border:none;
		border-radius:5px;
		background-color:rgb(32, 57, 149);
		color:white;
	}
	.file-data{
		display: flex;
		flex-direction:row;
		justify-content: space-between;
		align-items:center;
	}
	.form-input{
		display:flex;
		justify-content: center;
		align-items: center;
	}

	.form-input input {
		margin:0 10px;
		height:30px;
		width:190px;
		font-size:20px;
		font-style:italic;
		font-family: 'Courier New', Courier, monospace;
	}
	label {
		font-size:20px;
		font-style:italic;
		font-family: 'Courier New', Courier, monospace;
		margin:0 2px;

	}
	.form-input textarea {
		margin:0 10px;
		height:100px;
		width:190px;

	}

	img{
		height:250px;
		width:250px;
		margin:0 5px;
		border-radius:10px;
	}
	.image-container{
		display:flex;
		flex-direction: row;
		flex-wrap: wrap;
		height: auto;
		width:fit-content;
		padding: 0 80px;
		
	}
	
	.image-card{
		margin:0 5px;
		display:flex;
		flex-direction: column;
		align-items:center;
		text-transform: uppercase;
		font-weight: 700;

	}
	.image-box{
		display:flex;
		flex-direction: column;
		justify-content: center;
		align-items:center;
		margin:auto;
		padding:auto;
	}

	.image-card img{
		border:1px solid black;
	}
	.body-form{
		display:flex;
		flex-direction:column;
	}

	.body-form h1{
		align-self:center;
		color:white;
	}
	h1,p,label{
		color:white;
	}

	
</style>

<body>
	<div class="body-form">
	<h1>CONTACTS PAGE.</h1>
	<div class = "form-data">
		<form action="/contacts" method="post">
			<div class="file-data">
			<div class="form-input">
				<label for="name">Name</label>
				<input type="text" id="name" placeholder="Name"
					value="" name="name" required>
			</div>

			<div class="form-input">
				<label for="email">Email Address</label>
				<input type="email" id="email" placeholder="Email"
					value="" name="email" required>
			</div>
			
			
			<div class="form-input">
				<label for="message">Message</label>
				<textarea id="message" name="message" value=""
						placeholder="Input Message" required>
				</textarea>
			</div>
			</div>
			<div class="form-button">
				<button type="submit" name="submit">Submit</button>
			</div>
		</form>
	</div>
	</div>
<div class="image-box">

	<h1 class="image-box-title">CONTACT DETAILS IN THE DATABASE</h1>

	<div class="image-container">

      <% items.forEach(function(item) { %>
        <div class="image-card">
          <p><%= item.name%></p>
          <p class=" image-title"> <%= item.email %> :<%= item.message %> </p>
		</div>    
      <% }); %>
	</div>

	</div>

</body>

</html>
